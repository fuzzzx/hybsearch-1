(page "index.html"
  (:require
    [hybsearch.rpc :as rpc]
    [tailrecursion.hoplon.reload :refer [reload-all]]
    [ui.analysis-set-item :as analysis-set-item]
   ))

(reload-all 1000)

(rpc/init)



